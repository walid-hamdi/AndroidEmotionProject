<!--suppress ALL -->
<resources>

    <!-- Base application theme. -->
    <!--suppress AndroidDomInspection -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>

    </style>

    <!--suppress AndroidDomInspection -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>


    </style>

    <style name="loadingDrSign" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/sign_up</item>
        <item name="DialogSpotColor">@color/buttonColor</item>
        <item name="DialogSpotCount">4</item>
    </style>


    <style name="loadingRegister" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/create_account</item>
        <item name="DialogSpotColor">@color/buttonColor</item>
        <item name="DialogSpotCount">4</item>
    </style>
    <style name="loadingToUpload" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/load_to_upload</item>
        <item name="DialogSpotColor">@color/buttonColor</item>
        <item name="DialogSpotCount">4</item>
    </style>
    <style name="loadingToAdd" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/add</item>
        <item name="DialogSpotColor">@color/buttonColor</item>
        <item name="DialogSpotCount">4</item>
    </style>
    <style name="WaitToConsult" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/wait_to_consult</item>
        <item name="DialogSpotColor">@color/buttonColor</item>
        <item name="DialogSpotCount">4</item>
    </style>



</resources>
