<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.upfunstudio.emotionsocial.Companion.TipContentActivity">


    <TextView
        android:id="@+id/titleTipContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Title Tip"
        android:textSize="30dp"
        android:textStyle="italic|bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:background="@drawable/psycho" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contentTipContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Our various motivations for tipping also determine when we are likely to tip. Those who tip for social status more often tip for infrequently tipped occupations like car mechanics or veterinarians."
            android:textSize="17dp" />


    </ScrollView>

</LinearLayout>
