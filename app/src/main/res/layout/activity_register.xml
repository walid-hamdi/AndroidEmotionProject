<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:text="@string/create_account"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:background="@drawable/edit_background"
            android:hint="@string/full_name"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="@color/titleColor"
            android:textColorHint="@color/descriptionTitleColor" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:background="@drawable/edit_background"
            android:hint="@string/email_hit"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="@color/titleColor"
            android:textColorHint="@color/descriptionTitleColor" />

        <EditText
            android:id="@+id/editPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:background="@drawable/edit_background"
            android:hint="@string/password_hit"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="@color/titleColor"
            android:textColorHint="@color/descriptionTitleColor" />

        <EditText
            android:id="@+id/editConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:background="@drawable/edit_background"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="@color/titleColor"
            android:textColorHint="@color/descriptionTitleColor" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:background="@drawable/button_background"
            android:onClick="goToAnalyse"
            android:padding="15dp"
            android:text="@string/sign_up"
            android:textColor="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">


        </LinearLayout>


        <TextView
            android:id="@+id/alreadyBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:gravity="center"
            android:onClick="goLoginEvent"
            android:text="@string/already_have_account"
            android:textColor="@color/titleColor"
            android:textSize="17dp" />


    </LinearLayout>


</RelativeLayout>
