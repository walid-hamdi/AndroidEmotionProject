<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/doctorListColor"
    android:elevation="3dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp"

    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/chart"
            android:orientation="vertical">

            <TextView

                android:id="@+id/typeEmotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:gravity="left|center"
                android:text="Happy"
                android:textColor="@color/titleColor"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:text="You need to do a lot od conf fhdjf fgdj"
                android:textColor="@color/descriptionTitleColor"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:text="12:34PM" />


        </LinearLayout>





</android.support.v7.widget.CardView>