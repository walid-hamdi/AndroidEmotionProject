<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:elevation="3dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pictureCosulter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|center"
        android:layout_margin="10dp" />


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pictureMain"
        android:orientation="vertical">


        <TextView
            android:id="@+id/fullNameConsult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consult with Dr Ahmed Ali"
            android:textColor="@color/titleColor"
            android:layout_margin="7dp"
            android:textSize="17dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/timeConsult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:28"
            android:layout_marginLeft="7dp"
            android:textColor="@color/descriptionTitleColor"
            android:textSize="16dp" />


    </LinearLayout>


</android.support.v7.widget.CardView>