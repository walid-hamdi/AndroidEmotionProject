<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/dialoge_background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:gravity="center|center"
            android:text="Your Emotion?"
            android:textColor="@color/blue"
            android:textSize="20dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pictureCallingDr"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:src="@drawable/profile_photo"
             />



        <Button
            android:id="@+id/scanButtonDialoge"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:background="@drawable/scan_button_background"
            android:gravity="center"
            android:text="Scan"
            android:textColor="#ffffff"
            android:textSize="17dp" />



        <Button
            android:id="@+id/cancelButtonDialoge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:background="@drawable/dialoge_background"
            android:text="Cancel"
            android:textColor="@color/blue" />


    </LinearLayout>
</RelativeLayout>