<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@color/doctorListColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="@string/please_update_your_information"
        android:textColor="@color/titleColor"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/changeFullname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="0"
        android:background="@drawable/edit_background"
        android:hint="@string/full_name"
        android:padding="10dp"
        android:textColor="@color/titleColor"
        android:textColorHint="@color/descriptionTitleColor" />

    <EditText
        android:id="@+id/chngeMail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="0"
        android:background="@drawable/edit_background"
        android:hint="@string/email_hit"
        android:padding="10dp"
        android:textColor="@color/titleColor"
        android:textColorHint="@color/descriptionTitleColor" />

    <EditText
        android:id="@+id/changePhone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="0"
        android:background="@drawable/edit_background"
        android:hint="@string/phone_hit"
        android:padding="10dp"
        android:textColor="@color/titleColor"
        android:textColorHint="@color/descriptionTitleColor" />


    <EditText
        android:id="@+id/chnageCity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="0"
        android:background="@drawable/edit_background"
        android:hint="@string/city_hit"
        android:padding="10dp"
        android:textColor="@color/titleColor"
        android:textColorHint="@color/descriptionTitleColor" />

    <EditText
        android:id="@+id/chageLanguage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="0"
        android:background="@drawable/edit_background"
        android:hint="@string/language_hit"
        android:padding="10dp"
        android:textColor="@color/titleColor"
        android:textColorHint="@color/descriptionTitleColor" />

    <EditText
        android:id="@+id/chageSpec"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="0"
        android:background="@drawable/edit_background"
        android:hint="@string/speciality_hit"
        android:padding="10dp"
        android:textColor="@color/titleColor"
        android:textColorHint="@color/descriptionTitleColor" />

    <Button
        android:id="@+id/updateNowButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="0"
        android:background="@drawable/button_background"
        android:padding="10dp"
        android:text="@string/update_now_hit"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/CancelUpdate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_marginTop="1dp"
        android:layout_weight="0"
        android:background="@drawable/edit_background"
        android:padding="10dp"
        android:text="@string/cancel_hit"
        android:textColor="@color/titleColor" />


</LinearLayout>