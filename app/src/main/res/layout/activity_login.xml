<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/loginLayout"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="25dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:text="@string/login_tv"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:background="@drawable/edit_background"
            android:hint="@string/email_hit"
            android:padding="15dp"
            android:textColor="@color/titleColor"
            android:textColorHint="@color/descriptionTitleColor" />

        <EditText
            android:id="@+id/editPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="0"
            android:background="@drawable/edit_background"
            android:hint="@string/password_hit"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="@color/titleColor"
            android:textColorHint="@color/descriptionTitleColor" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="0"
            android:background="@drawable/button_background"
            android:onClick="loginEventLogin"
            android:padding="15dp"
            android:text="@string/login_view"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:gravity="center"
            android:onClick="goRegisterActivityEvent"
            android:text="@string/create_new_account_tv"
            android:textColor="@color/titleColor"
            android:textSize="15dp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="0"
            android:background="@drawable/edit_background"
            android:onClick="loginDoctorEvent"
            android:text="@string/login_as_doctor_view"
            android:textColor="@color/titleColor" />


    </LinearLayout>

</RelativeLayout>
