<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.HistoryReportDetails">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/emotionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/titleColor"
                android:layout_weight="0"
                android:width="0dp"
                android:gravity="center"
                android:text="Emotion Happy"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tipTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/descriptionTitleColor"
                android:layout_weight="0"
                android:text="Tip dkjfdhfkjd fkdjhfkdh dhfkdj fdghfkjdhkfjh kdjhfkdjfdkhfkdhfkdjfhdkjsfhksd"
                android:textSize="17dp" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chartPieDetails"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="0" />




        </LinearLayout>
    </ScrollView>


</RelativeLayout>